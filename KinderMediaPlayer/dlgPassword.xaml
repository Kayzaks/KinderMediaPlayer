<Window x:Class="KinderMediaPlayer.DlgPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinderMediaPlayer"
        mc:Ignorable="d"
        Title="Admin Password" Height="138.927" Width="360.825"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical"  FocusManager.FocusedElement="{Binding ElementName=txtPassword}">
            <TextBlock Text="Please enter the Admin password" Margin="5"/>
            <PasswordBox x:Name="txtPassword" Margin="5" PasswordChar="*" PreviewKeyDown="txtPassword_PreviewKeyDown"/>
            <Button x:Name="btnOk" Content="OK" Click="btnOk_Click" Margin="5" HorizontalAlignment="Center" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
