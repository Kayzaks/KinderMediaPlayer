<Application x:Class="KinderMediaPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KinderMediaPlayer"
             StartupUri="WndMain.xaml">
    <Application.Resources>
        <Style x:Key="AdminHeader1" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#FF5F0101" />
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style x:Key="AdminHeader2" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#FF5F0101" />
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style x:Key="DataField" TargetType="{x:Type Label}">
            <Setter Property="Background" Value="AntiqueWhite" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Application.Resources>
</Application>
